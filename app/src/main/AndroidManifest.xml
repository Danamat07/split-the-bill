<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.whopaid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhoPaid"
        tools:targetApi="31">

        <!-- Registration screen -->
        <activity android:name="com.example.whopaid.ui.auth.RegisterActivity" />

        <!-- Login screen -->
        <activity android:name="com.example.whopaid.ui.auth.LoginActivity" />

        <activity android:name="com.example.whopaid.ui.groups.GroupsActivity" />
        <activity android:name="com.example.whopaid.ui.groups.CreateGroupActivity" />
        <activity android:name="com.example.whopaid.ui.groups.GroupDetailsActivity" />

        <activity android:name="com.example.whopaid.ui.expenses.ExpensesActivity" />
        <activity android:name="com.example.whopaid.ui.expenses.CreateExpenseActivity" />

        <!-- Main screen (entry point) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WhoPaid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
