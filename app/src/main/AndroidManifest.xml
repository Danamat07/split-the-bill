<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whopaid">

    <!-- Permisiuni -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhoPaid">

        <!-- Auth screens -->
        <activity android:name="com.example.whopaid.ui.auth.RegisterActivity"/>
        <activity android:name="com.example.whopaid.ui.auth.LoginActivity"/>

        <!-- Groups screens -->
        <activity android:name="com.example.whopaid.ui.groups.GroupsActivity"/>
        <activity android:name="com.example.whopaid.ui.groups.CreateGroupActivity"/>
        <activity android:name="com.example.whopaid.ui.groups.GroupDetailsActivity"/>
        <activity android:name="com.example.whopaid.ui.groups.GroupMapActivity"/>
        <activity android:name="com.example.whopaid.ui.groups.LocationSettingsActivity"/>

        <!-- Expenses screens -->
        <activity android:name="com.example.whopaid.ui.expenses.ExpensesActivity"/>
        <activity android:name="com.example.whopaid.ui.expenses.CreateExpenseActivity"/>
        <activity android:name="com.example.whopaid.ui.expenses.BalanceActivity"/>

        <!-- Scan QR / Camera -->
        <activity android:name="com.example.whopaid.ui.groups.ScanQrActivity"/>

        <!-- Main launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WhoPaid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Foreground service for location sharing -->
        <service
            android:name="com.example.whopaid.service.ForegroundLocationService"
            android:exported="false"
            android:foregroundServiceType="location"/>
    </application>
</manifest>
