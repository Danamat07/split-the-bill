<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_activity"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- PAGE TITLE -->
        <TextView
            android:id="@+id/tvPageTitle"
            android:text="New Expense"
            android:textStyle="bold"
            android:textColor="#2F0C33"
            android:textSize="28sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Expense title -->
        <EditText
            android:id="@+id/etTitle"
            android:hint="@string/expense_title"
            android:textColorHint="#6B6B6B"
            android:textColor="#2D1B3D"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Expense amount -->
        <EditText
            android:id="@+id/etAmount"
            android:hint="@string/expense_amount"
            android:inputType="numberDecimal"
            android:textColorHint="#6B6B6B"
            android:textColor="#2D1B3D"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Currency selection -->
        <TextView
            android:text="Currency"
            android:textStyle="bold"
            android:textColor="#2F0C33"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerCurrency"
            android:layout_marginTop="4dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Payer selection -->
        <TextView
            android:text="Paid by"
            android:textStyle="bold"
            android:textColor="#2F0C33"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerPayer"
            android:layout_marginTop="4dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Participants selection -->
        <Button
            android:id="@+id/btnSelectParticipants"
            android:text="@string/select_participants"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FBBD40"
            android:minHeight="48dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Save button -->
        <Button
            android:id="@+id/btnAddExpense"
            android:text="@string/save_expense"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FBBD40"
            android:minHeight="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
