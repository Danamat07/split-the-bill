<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Group name -->
        <TextView
            android:id="@+id/tvGroupName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D1B3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Group description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_marginTop="8dp"
            android:textColor="#2D1B3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Members label -->
        <TextView
            android:text="@string/members"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="#2D1B3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Members list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMembers"
            android:layout_marginTop="4dp"
            android:textColor="#2D1B3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- NEW: View Expenses button (visible for all members) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViewExpenses"
            android:text="View Expenses"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Admin-only button: Add member -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddMember"
            android:text="@string/add_member_admin_only"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Leave group (non-admin only) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLeaveGroup"
            android:text="@string/leave_group"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Delete group (admin-only) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteGroup"
            android:text="@string/delete_group_admin_only"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
